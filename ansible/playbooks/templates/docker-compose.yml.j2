services:
  {{ app_name }}:
    image: {{ docker_image }}
    container_name: {{ app_name }}
    restart: unless-stopped
    ports:
      - "{{ app_port }}:{{ app_port }}"
    environment:
      - NODE_ENV=production
    volumes:
      - {{ app_data_path }}:/app/data
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ app_port }}"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 5s
    networks:
      - app_network

  jupyter:
    image: jupyter/datascience-notebook:x86_64-ubuntu-22.04
    container_name: jupyter_notebook
    restart: unless-stopped
    ports:
      - "8888:8888"
    environment:
      - NB_USER=root
      # Configuration via environment variables
      - JUPYTER_NOTEBOOK_ALLOW_ORIGIN=*
      - JUPYTER_NOTEBOOK_DISABLE_CHECK_XSRF=True
      - JUPYTER_NOTEBOOK_BASE_URL=/jupyter
    volumes:
      - jupyter_data:/home/jupyter/work
    command: >
      jupyter notebook
      --NotebookApp.allow_origin='*'
      --NotebookApp.disable_check_xsrf=True
      --NotebookApp.base_url=/jupyter
    networks:
      - app_network

volumes:
  jupyter_data:

networks:
  app_network:
    driver: bridge